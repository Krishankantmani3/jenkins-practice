node {
    def app

    try {
        ansiColor("xterm") {

            stage("Clone the repository") {
                checkout scm
            }

            stage("Build") {
                sh("echo 'Hello jenkins' > /log.txt ")
            }

            stage("Deploy To Server") {
                sh("echo 'deploying to server' >> /log.txt")    
            }
            
        }

    } catch (e) {
        currentBuild.result = "FAILED"
        throw e
    }
}
